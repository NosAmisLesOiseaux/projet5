{% extends "layout.html.twig" %}

{% block title %}Statistiques{% endblock %}

{% block body %}
	<h1>Quelques données</h1>
	<section>
		<h2>En général</h2>
    	<p>Nombre d'oiseaux : {{numberOfBirds}}</p>
    	<p>Nombre total d'observations publiées : {{numberOfPublishedCaptures}}</p>
    </section>
    <section>
    	<h2>Années</h2>
    	{% for year in years %}
    		<ul>
				<a href="{{ path('statistics', {'year': year}) }}"><h3 id="year" data-year="{{ year }}">{{ year }}</h3></a>
				<p>Nombre total d'observations publiées : {{ nbOfYearPublishedCaptures }}</p>
    		</ul>
    	{% endfor %}
    </section>
    <section>
    </section>
    <section id="statisticsByYear">
    	<div id="statisticsData"></div>
    	<div id="statisticsBirds"></div>
    </section>
{% endblock %}

{% block paginationJavascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('javascript/statistics/statistics.js') }}" ></script>
{% endblock %}