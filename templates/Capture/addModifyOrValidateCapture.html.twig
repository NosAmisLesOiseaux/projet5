{# templates/Capture/addModifyOrValidate.html.twig #}

{% extends "layout.html.twig" %}

{% block title %}Valider une observation - Compte {{ userRole }} {% endblock %}
{% block body %}
	<h1>Valider une observation</h1>
    <h2 id="userRole" data-userrole={{ role }}> Compte {{ userRole }}</h2>
    {% if capture.image is defined %}
        <img src="{{ asset('uploads/bird/' ~ capture.image.filename) }}" alt="" height="150">
    {% else %}
        {{ form_start(form_image) }}
        {{ form_errors(form_image) }}
        {{ form_widget(form_image) }}
        <button type="submit">Ajouter une image</button>
        {{ form_end(form_image) }}
    {% endif %}
    {{ form(form) }}
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('javascript/geolocation.js') }}"></script>
{% endblock %}