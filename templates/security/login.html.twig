{% extends "base.html.twig" %}

{% block body %}
    <div class="invalide-message">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>

    <h1 class="t-index-3">CONNEXION</h1>
    <span class="s-t-index-3"></span>
    <div class="container-f-login">
        <div class="form-login">
            <form action="{{ path('login') }}" method="post" class="b-form-login">
                <label for="username">Username:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" />
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="_target_path" value="/"/>
                <button type="submit" class="btn-login">Connexion</button>
            </form>
        </div>
    </div>
    <a href="{{ path('lost_password') }}">RÃ©initialiser mon mot de passe</a>
    <a href="{{ path('register') }}">S'enregistrer</a>
{% endblock %}