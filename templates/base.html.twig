<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
         <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css-design/materialize-src/sass/materialize.scss') }}" />
        <link rel="stylesheet" href="{{ asset('css-design/style.css') }}" />
        <title>{% block title %}Nos Amis les Oiseaux{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    {% for flashMessage in app.session.flashbag.get('error') %}
        {{ flashMessage }}
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        {{ flashMessage }}
    {% endfor %}

    <nav role="navigation" class="navigation">
        <div id="menuToggle">
        <input type="checkbox" />
            <span></span>
            <span></span>
            <span></span>

        <ul id="menu">
        
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('change_password') }}">Change password</a></li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('administration') }}">Administration</a></li>
                <li><a href="{{ path('account') }}">Mon compte</a></li>
                <li><a href="{{ path('logout') }}">Déconnexion</a></li>
            {% elseif is_granted('ROLE_USER') %}
                <li><a href="{{ path('account') }}">Mon compte</a></li>
                <li><a href="{{ path('logout') }}">Déconnexion</a></li>
            {% else %}
                <li><a href="{{ path('login') }}">Connexion</a></li>
                <li><a href="{{ path('register') }}">Inscription</a></li>
                <li><a href="{{ path('lost_password') }}">Mot de passe perdu</a></li>
            {% endif %}
        </ul>
        </div>
        <div class="image-logo">
       <span ><a><img class="logo" src="{{ asset('photo/logo-classic-1.png') }}"></a></span>
        </div>
        <div class="icon-recherche">  <i class="large material-icons search">search</i>
        </div> 
    </nav>
    {% if is_granted('ROLE_USER') %}
        {{ dump(app.user.roles) }}
    {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>