<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Nos Amis les Oiseaux{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    {% for flashMessage in app.session.flashbag.get('error') %}
        {{ flashMessage }}
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        {{ flashMessage }}
    {% endfor %}
    <nav>
        <ul>
            {% include "menu/default.html.twig" %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('change_password') }}">Change password</a></li>
                <li><a href="{{ path('lost_password') }}">Mot de passe perdu</a></li>
                <li><a href="{{ path('logout') }}">DÃ©connexion</a></li>
                <li>IS_AUTHENTICATED_FULLY</li>
            {% endif %}
            {# inverser les roles #}
            {% if is_granted('ROLE_NATURALIST') %}
                <li><a href="{{ path('naturalist_account') }}">Mon compte naturaliste</a></li>
            {% elseif is_granted('ROLE_USER') %}
                <li><a href="{{ path('user_account') }}">Mon compte utilisateur</a></li>
            {% elseif is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('admin_account') }}">Mon compte</a></li>
                <li><a href="{{ path('admin') }}">Administration</a></li>
            {% else %}
                <li><a href="{{ path('login') }}">Connexion</a></li>
                <li><a href="{{ path('register') }}">Inscription</a></li>
            {% endif %}
        </ul>
    </nav>
    {% if is_granted('ROLE_USER') %}
        {{ dump(app.user.roles) }}
    {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
